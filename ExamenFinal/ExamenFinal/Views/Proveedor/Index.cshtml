@model IEnumerable<ExamenFinal.Models.Proveedor>

@{
    ViewData["Title"] = "Index";
}

<h2>Lista de proveedores</h2>

<p>
    <a asp-action="Create">Crear nuevo</a>
</p>
<table id="table" class="display" style="width:100%">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Empresa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NombreContacto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefono)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Correo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SitioWeb)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Empresa)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NombreContacto)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Telefono)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Correo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SitioWeb)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.idProveedor">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.idProveedor">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.idProveedor">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
@section scripts{
    <script>
        $(document).ready(function () {
            $('#table').DataTable();
        });
    </script>
}